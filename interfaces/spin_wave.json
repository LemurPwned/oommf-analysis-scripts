{
  "name": "SpinWave Animator",
  "description": "Viewing dynamic animations of spin-waves",
  "specification": [
    {
      "name": "directory",
      "short": "d",
      "help": "directory to be investigated",
      "type": "str"
    },
    {
      "name": "step",
      "short": "s",
      "help": "animation step",
      "type": "int"
    },

    {
      "name": "component",
      "short": "c",
      "help": "which component of magnetisation to take? Mx, My, Mz?",
      "type": "str"
    },
    {
      "name": "view",
      "short": "v",
      "help": "view current defaults",
      "type": "bool",
      "action": "store_true"
    },
    {
      "name": "write",
      "short": "w",
      "help": "save the animation without displaying it",
      "type": "bool",
      "action": "store_true"
    },
    {
      "name": "zshift",
      "short": "z",
      "help": "shift in z nodes",
      "type": "int"
    },
    {
      "name": "yshift",
      "short": "y",
      "help": "shift in y nodes",
      "type": "int"
    }
  ]
}
